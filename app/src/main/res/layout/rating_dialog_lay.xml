<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/subs_dialog_back"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvRateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/roboto"
        android:text="Agent name"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"
            android:text="Job Status"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:text="Job Status"
            android:textColor="@color/primaryVariantColor"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/aRating"
        style="@style/Widget.MaterialRatingBar.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/rating"
        android:numStars="5"
        android:stepSize="1"
        android:progressTint="#FFCE31" />

    <EditText
        android:id="@+id/etDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:autofillHints="Enter Note Text"
        android:background="@drawable/feedback_back"
        android:ems="10"
        android:hint="@string/add_feedback"
        android:fontFamily="@font/roboto"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:lines="12"
        android:maxLines="5"
        android:minLines="5"
        android:padding="5dp"
        android:scrollbars="vertical" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:elevation="5dp"
        android:text="Save"
        app:backgroundTint="@color/primaryVariantColor"
        app:cornerRadius="20dp" />

</LinearLayout>